@model CapaModelo.Empleado;
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper" style="padding:10px">
    <div class="col-sm-12">
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                Lista Empleados
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-sm btn-success" onclick="abrirPopUpForm(null)"><i class="fa fa-plus" aria-hidden="true"></i> Agregar Nuevo</button>
                    </div>
                </div>
                <hr />
                <div class="row mt-3">
                    <div class="col-sm-12">
                        <table id="tbdata" class="table table-striped table-bordered nowrap compact" style="width:100%">
                            <thead>
                                <tr>
                                    <th>id_Empleado</th>
                                    <th>Nombre_Empleado</th>
                                    <th>Direccion</th>
                                    <th>Numero_Cedula</th>
                                    <th>Telefono</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header btn-info text-white">
                <h5 class="modal-title" id="exampleModalLabel">Empleado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form">

                    <input type="hidden" class="form-control form-control-sm model" id="txtid" name="id_Empleado">

                    <div class="form-group row">
                        <label for="txtNombre_Empleado" class="col-sm-2 col-form-label col-form-label-sm">Nombre: <span class="error"></span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm model" id="txtNombre_Empleado" name="Nombre_Empleado">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtDireccion" class="col-form-label col-sm-2 col-form-label-sm">Dirección: <span class="error"></span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm model" id="txtDireccion" name="Direccion">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtNumero_Cedula" class="col-sm-2 col-form-label col-form-label-sm">Cédula: <span class="error"></span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm model" id="txtNumero_Cedula" name="Numero_Cedula">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtTelefono" class="col-sm-2 col-form-label col-form-label-sm">Teléfono: <span class="error"></span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm model" id="txtTelefono" name="Telefono">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-sm btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/CrudEmpleado.js"></script>
}
