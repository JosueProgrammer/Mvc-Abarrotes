@model CapaModelo.Producto;
@{
    ViewBag.Title = "CrearP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper" style="padding:10px">
    <div class="col-sm-12">
         <div class="card border-info">
            <div class="card-header bg-info  text-white">
                Lista Productos
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-sm btn-success" onclick="abrirPopUpFormP(null)"><i class="fa fa-plus" aria-hidden="true"></i> Agregar Nuevo</button>
                    </div>
                </div>
                <hr />
                <div class="row mt-3">
                    <div class="col-sm-12">
                        <table id="tbdata" class="table table-striped table-bordered nowrap compact" style="width:100%">
                            <thead>
                                <tr>
                                    <th>id_Producto</th>
                                    <th>Nombre_Producto</th>
                                    <th>Descripcion</th>
                                    <th>id_Categoria</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        
                        </table>
                    </div>
                </div>
            </div>
        </div> 
    </div>
</div>

    <!-- Modal -->
    <div class="modal fade" id="FormModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header btn-info text-white">
                    <h5 class="modal-title" id="exampleModalLabel">Producto</h5>
                    <button type="button" class="close " data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="form">

                        <input  type="hidden" class="form-control form-control-sm model" id="txtid" name="id_Producto">


                        <div class="form-group row">
                            <label for="txtNombre_Producto" class="col-sm-2 col-form-label col-form-label-sm">Producto: <span class="error"></span></label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control form-control-sm model" id="txtNombre_Producto" name="Nombre_Producto">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txtDescripcion" class="col-form-label col-sm-2 col-form-label-sm">Descripcion: <span class="error"></span></label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control form-control-sm model" id="txtDescripcion" name="Descripcion">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="ddlCategoria" class="col-sm-2 col-form-label col-form-label-sm">Categoria</label>
                            <div class="col-sm-8">
                                <select class="form-control form-control-sm model" id="ddlCategoria" name="Nombre_Categoria"></select>
                            </div>
                            <div class="col-sm-2">
                                <button type="button" class="btn btn-xs btn-info" id="btnTrasladar" style="height: 20px;line-height: 10px;text-align:center;" onclick="abrirPopUpForm(null)">...</button>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="cboEstado"  class="col-sm-2 col-form-label col-form-label-sm">Estado:</label>
                            <div class="col-sm-10">
                                <select class="form-control form-control-sm model"  id="cboEstado"  name="Estado">
                                    <option value="1">Activo</option>
                                    <option value="0">Inactivo</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-sm btn-primary" onclick="Guardar()">Guardar</button>
                </div>
            </div>
        </div>
    </div>


<!-- Modal Categoria -->
<div class="modal fade" id="FormModalC" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header btn-info text-white">
                <h5 class="modal-title" id="exampleModalLabel">Categoria</h5>
                <button type="button" class="close " data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formc">

                    <input type="hidden" class="form-control form-control-sm model" id="txtidc" name="id_Categoria">


                    <div class="form-group row">
                        <label for="txtNombre_Categoria" class="col-sm-2 col-form-label col-form-label-sm">Categoria: <span class="error"></span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm model" id="txtNombre_Categoria" name="Nombre_Categoria">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtDescripcionc" class="col-form-label col-sm-2 col-form-label-sm">Descripcion: <span class="error"></span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm model" id="txtDescripcionc" name="Descripcion">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="cboEstadoc" class="col-sm-2 col-form-label col-form-label-sm">Activo:</label>
                        <div class="col-sm-10">
                            <select class="form-control form-control-sm model" id="cboEstadoc" name="Activo">
                                <option value="1">Activo</option>
                                <option value="0">Inactivo</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-sm btn-primary" onclick="GuardarCat()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Crud_Producto.js"></script>
}
    
